generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Guest {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  guestOf      User    @relation(fields: [guestOfId], references: [id])
  guestOfId    String  @db.ObjectId
  ImageOfGuest Image[]
  pageUrl      String
}

model User {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  email  String? @unique
  guests Guest[]
}

enum ImageOrder {
  First
  Second
  Third
}

model Image {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  filename String
  mimetype String
  path     String
  Guest    Guest?     @relation(fields: [guestId], references: [id])
  guestId  String?    @db.ObjectId
  order    ImageOrder
}
