{
	"version": 2,
	"builds": [
		{
			"src": "client/vite.config.ts",
			"use": "@vercel/static-build",
			"config": { "distDir": "client/dist" }
		},
		{ "src": "api/**/*.js", "use": "@vercel/node" }
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "/api/$1" },
		{ "src": "/(.*)", "dest": "/client/$1" }
	]
}
